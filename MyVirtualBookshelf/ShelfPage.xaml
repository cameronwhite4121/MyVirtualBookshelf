<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyVirtualBookshelf.ShelfPage"
             Title="{Binding ShelfId, StringFormat='I am Shelf {0}'}">
    <VerticalStackLayout>

        <!-- Book Search Feature -->
        <FlexLayout Padding="15" 
                    Direction="Row" 
                    AlignItems="Center" 
                    JustifyContent="Start" 
                    Wrap="Wrap">
            <Label Text="Add a Book" 
                   FontSize="20" 
                   FontAttributes="Bold" 
                   Margin="5" />
            <SearchBar x:Name="BookSearchbar"
                       Placeholder="Enter Book Title" 
                       FontSize="18" 
                       Margin="5" 
                       HorizontalOptions="FillAndExpand" 
                       WidthRequest="300"/>
            <Button x:Name="BookSearchbarButton"
                    Text="+" 
                    FontSize="24" 
                    BackgroundColor="#0078D4" 
                    TextColor="White" 
                    WidthRequest="45" 
                    HeightRequest="45" 
                    CornerRadius="30" 
                    Margin="5"
                    Padding="1"
                    Clicked="BookSearchbarButton_Clicked"/>
        </FlexLayout>

        <BoxView Color="White" HeightRequest="1" HorizontalOptions="FillAndExpand" Margin="20" />

        <!-- Book List Labels -->
        <Grid Padding="10" RowDefinitions="Auto, Auto, Auto, Auto" ColumnDefinitions="*, *, *, *">
            <Label Text="Book Title" 
                   FontSize="{OnIdiom Phone=15, Tablet=17, Desktop=19}" 
                   Grid.Row="0" 
                   Grid.Column="0" 
                   Margin="10,0" 
                   HorizontalTextAlignment="Center" 
                   VerticalTextAlignment="Center" />
            <Label Text="Book Author" 
                   FontSize="{OnIdiom Phone=15, Tablet=17, Desktop=19}" 
                   Grid.Row="0" 
                   Grid.Column="1" 
                   Margin="10,0" 
                   HorizontalTextAlignment="Center" 
                   VerticalTextAlignment="Center" />
            <Label Text="Book Genre" 
                   FontSize="{OnIdiom Phone=15, Tablet=17, Desktop=19}" 
                   Grid.Row="0" 
                   Grid.Column="2" 
                   Margin="10,0" 
                   HorizontalTextAlignment="Center" 
                   VerticalTextAlignment="Center" />
            <Label Text="Book ISBN" 
                   FontSize="{OnIdiom Phone=15, Tablet=17, Desktop=19}" 
                   Grid.Row="0" 
                   Grid.Column="3" 
                   Margin="10,0" 
                   HorizontalTextAlignment="Center" 
                   VerticalTextAlignment="Center" />
        </Grid>

        <BoxView Color="White" HeightRequest="1" HorizontalOptions="FillAndExpand" Margin="20" />

        <!-- Books Are Populated Here -->
        <ListView x:Name="ShelfContentView" HorizontalOptions="Center">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10" Orientation="Horizontal" HorizontalOptions="Center">
                            <Label 
                            Text="I am Book >:)" 
                            FontSize="18" 
                            FontAttributes="Bold" 
                            TextColor="White"
                            />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </VerticalStackLayout>

</ContentPage>