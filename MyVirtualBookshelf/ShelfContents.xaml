<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyVirtualBookshelf.ShelfContents"
             Title="ShelfContents">
    <VerticalStackLayout>

        <FlexLayout Direction="Row" JustifyContent="Center" AlignItems="Start" Wrap="Wrap">

            <Label Text="Book Title" FontSize="20" Margin="5,5"></Label>
            <Label Text="Book Author" FontSize="20" Margin="5,5"></Label>
            <Label Text="Book Genre" FontSize="20" Margin="5,5"></Label>
            <Label Text="Book Isbn" FontSize="20" Margin="5,5"></Label>

        </FlexLayout>

        <BoxView Color="White" HeightRequest="1" HorizontalOptions="FillAndExpand" WidthRequest="1000" Margin="10,20" />

        <Label Text="Use grid layout for responsive columns instead" HorizontalOptions="Center" FontSize="30" Margin="5,5"></Label>

    </VerticalStackLayout>

</ContentPage>