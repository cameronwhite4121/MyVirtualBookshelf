<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MyVirtualBookshelf.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MyVirtualBookshelf"
    Shell.FlyoutBehavior="Flyout"
    Title="MyVirtualBookshelf">

    <Shell.FlyoutHeader>
        <StackLayout Padding="10" BackgroundColor="#2D3B45">
            <Label Text="My Virtual Bookshelf"
               FontSize="20"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand" />
        </StackLayout>
    </Shell.FlyoutHeader>

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
    Title="ShelfContents"
    ContentTemplate="{DataTemplate local:ShelfPage}"
    Route="ShelfContents" />

</Shell>
