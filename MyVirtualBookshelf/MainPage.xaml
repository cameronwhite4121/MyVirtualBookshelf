<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyVirtualBookshelf.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="beautiful_bookshelf_4464252.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="Cartoon Bookshelf" />

            <Label
                Text="Welcome to &#10; Your Very Own Virtual Bookshelf!"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to dot net Multi platform App U I" />

            <FlexLayout Direction="Row" JustifyContent="Center" AlignItems="Center" Wrap="Wrap">
               
                <Label Text="Shelves" FontSize="30"></Label>
                <Label x:Name="ShelfCounterLabel" Text="0 / 8" FontSize="30" Margin="5, 0"></Label>
                
                <Button x:Name="AddShelfBtn"
                        Text="+"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        BorderColor="White"
                        BorderWidth="2"
                        Margin="5, 0"
                        Clicked="CreateShelfBtn"/>
                
            </FlexLayout>

            <BoxView Color="White" HeightRequest="1" HorizontalOptions="FillAndExpand"/>

            <!-- Shelves Display -->
            <CollectionView ItemsSource="{Binding Shelves}" 
                    HorizontalOptions="Center" 
                    VerticalOptions="Center">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid HorizontalOptions="Center" VerticalOptions="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Button Text="{Binding Id, StringFormat='I am Shelf {0}'}"
                                    BackgroundColor="Transparent"
                                    TextColor="White"
                                    Padding="10"
                                    FontSize="24"  
                                    Clicked="OpenShelfBtn" 
                                    Grid.Column="0" />

                            <Button Text="X" 
                                    BackgroundColor="Transparent" 
                                    TextColor="White" 
                                    BorderColor="White" 
                                    BorderWidth="2" 
                                    HorizontalOptions="Center" 
                                    VerticalOptions="Center" 
                                    Clicked="DeleteShelfBtn" 
                                    Grid.Column="1" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
